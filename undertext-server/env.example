# Undertext Server Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8080
RUST_LOG=info

# Database Configuration
DATABASE_URL=sqlite:undertext.db

# OAuth Configuration (Google OAuth 2.0)
OAUTH_CLIENT_ID=your_google_oauth_client_id_here
OAUTH_CLIENT_SECRET=your_google_oauth_client_secret_here
OAUTH_REDIRECT_URI=http://localhost:8080/callback

# Encryption Configuration
# Generate a 32-byte (256-bit) key and encode it as base64
ENCRYPTION_MASTER_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# JWT Configuration
# Generate a secure random string for JWT signing
JWT_SECRET=your_jwt_secret_key_here

# Session Configuration
SESSION_TIMEOUT_MINUTES=60 